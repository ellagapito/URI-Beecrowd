/*A empresa ABC resolveu conceder um aumento de salários a seus funcionários de acordo com a tabela abaixo:
0 - 400.00 - 15%
400.01 - 800.00 - 12%
800.01 - 1200.00 - 10%
1200.01 - 2000.00 - 7%
Acima de 2000.00 - 4%

Leia o salário do funcionário e calcule e mostre o novo salário, bem como o valor de reajuste ganho e o índice reajustado, em percentual.*/

#include <iostream>
#include <iomanip>
using namespace std;
int main (){
    
    double salario, percentual;
    
    cin >> salario;;
    
    if (salario >= 0 and salario <= 400.00){
        percentual = 0.15;
        cout << fixed << setprecision (2);
        cout << "Novo salario: " << salario + (salario * percentual) << endl;
        cout << "Reajuste ganho: " << salario * percentual << endl;
        cout << "Em percentual: 15 %" << endl;
    }
    
    else{
    
        if (salario >= 400.01 and salario <= 800.00){
            percentual = 0.12;
            cout << fixed << setprecision (2);
            cout << "Novo salario: " << salario + (salario * percentual) << endl;
            cout << "Reajuste ganho: " << salario * percentual << endl;
            cout << "Em percentual: 12 %" << endl;
        }
    
    else{
    
        if (salario >= 800.01 and salario <= 1200.00){
            percentual = 0.10;
            cout << fixed << setprecision (2);
            cout << "Novo salario: " << salario + (salario * percentual) << endl;
            cout << "Reajuste ganho: " << salario * percentual << endl;
            cout << "Em percentual: 10 %" << endl;
        }
    
    else{
    
        if (salario >= 1200.01 and salario <= 2000.00){
            percentual = 0.07;
            cout << fixed << setprecision (2);
            cout << "Novo salario: " << salario + (salario * percentual) << endl;
            cout << "Reajuste ganho: " << salario * percentual << endl;
            cout << "Em percentual: 7 %" << endl;
        }
    
    else{
    
        if (salario > 2000.00){
            percentual = 0.04;
            cout << fixed << setprecision (2);
            cout << "Novo salario: " << salario + (salario * percentual) << endl;
            cout << "Reajuste ganho: " << salario * percentual << endl;
            cout << "Em percentual: 4 %" << endl;
        }
    }
    }
    }
    }

}
